<section class="login-block">
    <div class="container">
	<div class="row align-items-center">
		<div class="col-md-4 login-sec ">
		    <h2 class="text-center">تغییر رمز عبور</h2>
		    <form class="login-form" action="/users/reset-password/<%= userId %>" method="POST">

                <div class="form-group">
                    <label for="InputPassword" class="text-uppercase"></label>
                    <input
                      type="password"
                      name="password"
                      id="inputPassword"
                      class="form-input"
                     placeholder="کلمه عبور"
                  />
                  </div>
        
                  <div class="form-group">
                    <label for="inputConfirmPassword" class="text-uppercase"></label>
                    <input
                      type="password"
                      name="confirmPassword"
                      id="inputConfirmPassword"
                      class="form-input"
                      placeholder="تکرار کلمه عبور"
                  />
                  </div>

  <button type="submit" class="btn btn-login float-right">تغییر رمز عبور</button>
  
</form>
	</div>
  <div class="col-md-8 banner-sec">
      <%- include("./includes/loginMessages.ejs") %> 
</div>
</div>
</section>