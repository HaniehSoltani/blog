<%- include("./includes/navbar.ejs") %>
<!-- Page Content -->
<div class="container m-5" style="color: wheat;">
    <div class="row">
        <!-- Post Content Column -->
        <div class="col">
            <!-- Title -->
            <h1 class="mt-4" style="color: wheat;"><%= post.title %></h1>

            <!-- Author -->
            <p class="lead" style="color: wheat;">
                نوشته شده توسط :
                <a href="#"><%= post.user.fullname %></a>
            </p>

            <hr />

            <!-- Date/Time -->
            <p style="color: wheat;">تاریخ انتشار : <%= formatDate(post.createAt)%></p>

            <hr />

            <!-- Preview Image -->
            <div class="text-center" > 
                <img
                    class="img-fluid rounded"
                    src="http://localhost:3000/uploads/thumbnails/<%= post.thumbnail %>"
                    alt=""
                />
            </div>

            <hr />

            <!-- Post Content -->
            <p class="text-justify" ><%- post.body %></p>

            <hr />

            <!-- Comments Form -->
            <div class="widget-area blank" style="background-color: #2d2d7f;">
                <div class="status-upload">
                    
                    <form style="background-color: #2d2d7f;" >
                        <textarea style="background-color: #2d2d7f;" class="border-0" placeholder="نظر خود را بنویسید" ></textarea>
  
                        <button  type="submit" class="btn btn-success green"><i class="fa fa-share"></i> ثبت</button>
                    </form>
                </div>
            </div>

            <!-- Single Comment -->


            <!-- Comment with nested comments -->

        </div>
    </div>
</div>
<%- include('./includes/footer.ejs') %>
