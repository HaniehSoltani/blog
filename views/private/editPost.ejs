<div class="container">
	<div class="row">
	    
	    <div class="col-md-8 col-md-offset-2" style="color: wheat;">
	        
    		<h1>ویرایش پست</h1>
    		<div class="w-50 mx-auto">
                <%- include("../includes/validationErrors.ejs") %>
            </div>
    		<form action="/dashboard/edit-post/<%= post._id %> " class="w-auto" method="POST" enctype="multipart/form-data">

                <label for="selectedThumbnail">عکس بند انگشتی</label>
                <div class="input-group mb-3">
                    <input 
                        type="file"
                        class="custom-file-input"
                        name="thumbnail"
                        id="selectedThumbnail"
                        aria-describedby="inputGroupFileAddon03" />

                    <label
                        id="thumbStatus"
                        class="custom-file-label"
                        for="inputGroupFile03">عکس مورد نظر را انتخاب کنید</label>
                </div>

    		    
    		    <div class="form-group">
                    <label for="title">عنوان پست</label>
                    <input
                        type="text"
                        class="form-control w-50"
                        name="title"
                        id="title"
                        value="<%= post.title %> "
                    />
                </div>
        
                <div class="form-group">
                    <label for="status">وضعیت</label>
                    <select name="status" class="form-control w-25" id="status">
                        <option value="<%= post.status %>" selected><%= post.status === "public" ? "عمومی" : "خصوصی" %></option>
                        <option value="<%= post.status === "public" ? "private" : "public" %>"><%= post.status === "public" ? "خصوصی" : "عمومی" %></option>
                    </select>
                </div>
        
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <button
                            class="btn btn-sm btn-outline-secondary"
                            type="button"
                            id="imageUpload"
                        >
                            آپلود عکس
                        </button>
                    </div>
                    <div class="custom-file">
                        <input
                            type="file"
                            class="custom-file-input"
                            id="selectedImage"
                        />
                        <label
                            id="imageStatus"
                            class="custom-file-label"
                            for="selectedImage"
                        >
                            عکس مورد نظر را انتخاب کنید
                        </label>
                    </div>
                </div>
        
                <div id="progressDiv" style="display: none">
                    <div class="progress">
                        <div
                            id="progressBar"
                            class="progress-bar progress-bar-striped progress-bar-animated"
                            role="progressbar"
                            aria-valuemin="0"
                            aria-valuemax="100"
                        ></div>
                    </div>
                </div>
        
                <div class="w-100 bg-light text-center">
                    <p id="uploadResult" class="overflow-auto">آدرس عکس آپلود شده</p>
                </div>
        
                <div class="form-group">
                    <h5>متن اصلی پست</h5>
                    <textarea  name="body" class="form-control" id="body"><%= post.body %> </textarea>
                </div>
        
                <div class="row">
                    <input type="submit" value="ساخت پست" class="btn btn-primary m-2" />
                    <a href="/dashboard" class="btn btn-default m-2" style="color: wheat;">انصراف</a>
                </div>
    		    
    		</form>
		</div>
		
	</div>
</div>