<section class="login-block">
    <div class="container">
	<div class="row">
		<div class="col-md-4 login-sec">
		    <h2 class="text-center">ورود به بخش مدیریت</h2>
		    <form class="login-form" action="/users/login" method="POST">
  <div class="form-group" >
    <label for="inputEmail" class="text-uppercase"></label>
    <input
    type="email"
    name="email"
    id="inputEmail"
    class="form-input"
    placeholder="آدرس ایمیل"
    required
    autofocus
/>
    
  </div>
  <div class="form-group">
    <label for="inputPassword" class="text-uppercase"></label>
    <input
        type="password"
        name="password"
        id="inputPassword"
        class="form-input"
        placeholder="کلمه عبور"
        required
    />
  </div>
  
  
    <div class="form-check">
    <label class="form-check-label">
      <input type="checkbox" class="form-check-input" value="remember-me" name="remember">
      <small> من را به خاطر بسپار</small>
    </label>
  </div>
  <div class="form-group">
    <div
            class="g-recaptcha"
            data-sitekey="6Ldu-_kcAAAAAOux36I_g3XrtuScc9cAhe_2mTKX"
        ></div>
  </div>

  <div>

    <a href="/users/forget-password" class="m-2">فراموشی رمز عبور</a>
  </div>
  
  <button type="submit" class="btn btn-login float-right">ورود</button>
  
</form>
	</div>
  <div class="col-md-8 banner-sec">
      <%- include("./includes/loginMessages.ejs") %> 
</div>
</div>
</section>